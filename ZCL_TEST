* <SIGNATURE>---------------------------------------------------------------------------------------+
* | Instance Public Method ZCL_TEST->UPDATE_MATERIAL_STATE
* +-------------------------------------------------------------------------------------------------+
* | [<-->] CS_VBAP                        TYPE        VBAPVB
* | [<-->] CT_VBAP                        TYPE        TT_VBAP(optional)
* +--------------------------------------------------------------------------------------</SIGNATURE>
  METHOD update_material_state.

    IF line_exists( mt_material_state[ posnr = cs_vbap-posnr ] ).

      DATA(ls_item_state) = mt_material_state[ posnr = cs_vbap-posnr ].

      DATA(lv_tabix) = mt_material_state[ posnr = cs_vbap-posnr ].

      MODIFY mt_material_state  FROM VALUE #( posnr = cs_vbap-posnr
                                          old_matnr = ls_item_state-new_matnr
                                          new_matnr = cs_vbap-matnr
                                          old_qty   = ls_item_state-new_qty
                                          new_qty   = cs_vbap-kwmeng
                                          processed = abap_false ) INDEX lv_tabix.
    ELSE.

      APPEND VALUE #( posnr = cs_vbap-posnr
                  old_matnr = cs_vbap-matnr
                  new_matnr = cs_vbap-matnr
                    old_qty = cs_vbap-kwmeng
                    new_qty = cs_vbap-kwmeng
                  processed = abap_false ) TO mt_material_state.
    ENDIF.

  ENDMETHOD.
ENDCLASS.
