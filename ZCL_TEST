* <SIGNATURE>---------------------------------------------------------------------------------------+
* | Static Public Method ZCL_TEST=>GET_INSTANCE
* +-------------------------------------------------------------------------------------------------+
* | [<-()] RO_SELF                        TYPE REF TO ZCL_TEST
* +--------------------------------------------------------------------------------------</SIGNATURE>
  METHOD get_instance.

    IF mo_self IS NOT BOUND.
      mo_self = NEW zcl_test( ).
    ENDIF.
    ro_self = mo_self.

  ENDMETHOD.


* <SIGNATURE>---------------------------------------------------------------------------------------+
* | Instance Public Method ZCL_TEST->IS_MATERIAL_PROCESSED
* +-------------------------------------------------------------------------------------------------+
* | [--->] IS_VBAP                        TYPE        VBAPVB
* | [<-()] RV_IS_MAT_PROCESSED            TYPE        XFLD
* +--------------------------------------------------------------------------------------</SIGNATURE>
  METHOD is_material_processed.

    IF line_exists( mt_material_state[ vbeln = is_vbap-vbeln
                                       posnr = is_vbap-posnr
                                   new_matnr = is_vbap-matnr ] ).
      rv_is_mat_processed = abap_true.
    ENDIF.

  ENDMETHOD.


